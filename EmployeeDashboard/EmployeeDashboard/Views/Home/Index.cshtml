    <h4>To navigate the dashboard, use the links to the left.</h4>
</div>

<script>
    function submitAlert()
    {
        decision = confirm("Are you sure you want to submit these activities?");
            if(decision == true)
                {
                    redirect("home");
                }
            else
                {}
    }
</script>

