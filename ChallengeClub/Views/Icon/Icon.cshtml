@model ChallengeClub.Models.Member;

@{
    ViewData["Title"] = "Icon";
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Icon.css" />

</head>

<body>
    <div class="bg-primary"><h1>Is that you ? </h1></div>

    <div class="icon"><img src="@Model.IconPath" height="200" width="200"></div>

    <div class="btn-login"><a href="/Welcome/@Model.MemberId" class="btn btn-lg btn-success" role="button" >Yes, log in.</a></div>

    <div class="btn-notme"><a asp-controller="Login" asp-action="Index" class="btn btn-lg btn-danger" role="button">No, it is not me.</a></div>

    <div class="btn-logout"><a href="/MemberActivity/@Model.MemberId" class="btn btn-lg btn-warning" role="button">Yes, log out.</a></div>
</body>
</html>

