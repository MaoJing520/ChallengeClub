@{
    ViewData["Title"] = "Daily Activities";
}

<style>
    button {
        border-radius: 10px;
        width: 20%;
        height: 150px;
        background-color: lightblue;
    }

        button:after {
            background-color: red;
        }
</style>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<div id="activities" class="col-md-9">

    <div>
        <h2>Choose Today's Activities</h2>
        <h5>Click activities to make them available today or click "+ Add Activity" to add a new activity.</h5>
        <hr /><br />

        <style>
            #myDIV {
                margin-bottom: 10px;
            }
        </style>
        <div id="body"></div><br /><br />
        <h3>Selected Activities</h3>
        <div id="test1"></div>
        <br />




        <button type="button" style="height:50px;" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">+ Add Activity</button>
        <button type="button" style="height:50px;" class="btn btn-info btn-lg">Submit</button>

        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">

                        <h2 class="modal-title">Add Activity</h2>
                    </div>
                    <form>
                        <div class="modal-body">

                            <h3>Name: </h3>
                            <input type="text" name="activityName" required /><br />
                            <h3>Hours: </h3>
                            <input type="text" name="activityHours" required /><br /><br />

                        </div>
                        <div class="modal-footer">
                            <button type="button" style="width:10%;height:50px;" class="btn btn-default" name="activitySubmit" data-dismiss="modal" onclick="makeButton(activityName.value,activityHours.value)">Submit</button>
                            <button type="button" style="width:10%;height:50px;" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</html>

<script>
    i=0;
function makeButton(name,hrs) {
    if(name==""||hrs=="")

    var btn = document.createElement("BUTTON");
    var space = document.createTextNode(" ");
    btn.setAttribute("id",name);
    var text = "Name: "+name+",    Hours: "+hrs;
    var t = document.createTextNode(text);
    btn.appendChild(t);
    document.getElementById("body").appendChild(btn);
    document.getElementById("body").appendChild(space);
    document.getElementById(name).addEventListener("mousedown",select(name,hrs));
        
    }

    function select(name,hrs)
    {
    document.getElementById("test1").innerHTML = i++;

    }
</script>
<br />

var button = document.createElement("BUTTON");
    var space = document.createTextNode(" ");
    button.setAttribute("id",name+"_selected");
    var text = "Name: "+name+",    Hours: "+hrs;
    var t = document.createTextNode(text);
    button.appendChild(t);
    document.button.id = name;

    document.getElementById("test1").appendChild(button);
    document.getElementById("test1").appendChild(space);